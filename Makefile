LIBFT = libft_def/libft.a
NAME = libftprintf.a
SRCS =  printf.c \
		Cases.c \
		c_case.c \
		di_case.c \
		p_case.c \
		s_case.c \
		xmin_case.c \
		xmax_case.c \
		u_case.c \

COLOUR_GREEN=\033[0;32m
COLOUR_RED=\033[0;31m
COLOUR_BLUE=\033[0;34m
COLOUR_END=\033[0m

CC = gcc
FLAGS = -c -Wall -Wextra -Werror
INCLUDES = -I libft_def -I .

OBJS = $(SRCS:.c=.o)

$(NAME): $(OBJS)
	$(MAKE) -C ./libft_def
	cp $(LIBFT) $(NAME)
	@echo "$(COLOUR_GREEN)Libreria compilada"
	$(CC) $(FLAGS) $(INCLUDES) $(SRCS)
	ar -rcs $(NAME) $(OBJS)
	@echo "$(COLOUR_GREEN)Compilado"

all : $(NAME) -j4

clean :
	$(MAKE) clean -C ./libft_def
	rm -rf $(OBJS)
	@echo "$(COLOUR_RED)Archivos borrados$(COLOUR_END)"

fclean : clean
	$(MAKE) fclean -C ./libft_def
	rm -rf $(NAME)
	@echo "$(COLOUR_RED)Archivos borrados$(COLOUR_END)"

re : fclean all

